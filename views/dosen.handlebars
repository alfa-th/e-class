<div class="container h-100">
<h1 class="text-center mb-3">{{title}}</h1>
<h1 class="text-center mb-3">Salam Sejahtera, {{namaDosen}}</h1>

<form action="/dosen" method="POST" class="mb-4">
  <div class="form-group">
    <label for="uname">Nama</label>
    <input type="text" name="name" class="form-control">
  </div>
  <div class="form-group">
    <label for="email">Email</label>
    <input type="email" name="email" class="form-control">
  </div>
  <div class="form-group">
    <label for="email">Password</label>
    <input type="password" name="password" class="form-control">
  </div>
  <label for="game">Mata Kuliah</label>
  <div class="custom-control custom-checkbox">
    <input type="checkbox" class="custom-control-input" id="psi" name="kelas" value="PSI">
    <label class="custom-control-label" for="psi">PSI</label>
  </div>
  <div class="custom-control custom-checkbox">
    <input type="checkbox" class="custom-control-input" id="si" name="kelas" value="SI">
    <label class="custom-control-label" for="si">SI</label>
  </div>
  <div class="custom-control custom-checkbox">
    <input type="checkbox" class="custom-control-input" id="sisop" name="kelas" value="SISOP">
    <label class="custom-control-label" for="sisop">SISOP</label>
  </div>
  <br>
  <input type="submit" value="Add Member" class="btn btn-primary btn-block">
</form>

<h4>Mahasiswa</h4>
<ul class="list-group">
  {{#each mahasiswa}}
  <li class="list-group-item" value={{this.nama}}>{{this.nama}}: {{this.kelas}}: {{this.email}}</li>
  {{/each}}
</ul>

</div>